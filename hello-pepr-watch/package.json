{
  "name": "hello-pepr-watch",
  "version": "0.0.1",
  "description": "Pepr feature: Watch",
  "keywords": [
    "pepr",
    "k8s",
    "policy-engine",
    "pepr-module",
    "security"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "pepr": {
    "uuid": "2dde1046-4b91-498f-b58f-6b371932e4b6",
    "onError": "reject",
    "webhookTimeout": 10,
    "customLabels": {
      "namespace": {
        "pepr.dev": ""
      }
    },
    "alwaysIgnore": {
      "namespaces": []
    },
    "includedFiles": [],
    "env": {}
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "dotenv-cli": "^11.0.0",
    "pepr": "1.1.0"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "typescript": "5.8.3",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "pepr": "pepr",
    "cli": "npm run --workspace helpers cli -- --module=$(pwd)",
    "test": "npm run cli -- test --suite all",
    "test:e2e": "npm run cli -- test --suite e2e",
    "test:unit": "npm run cli -- test --suite unit"
  }
}
