{
  "name": "hello-pepr-config-ignored-controller-ns",
  "version": "0.0.1",
  "description": "Pepr Feature: Ignored Controller NS Test",
  "keywords": [
    "pepr",
    "k8s",
    "policy-engine",
    "pepr-module",
    "security"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "pepr": {
    "uuid": "ignored-controller-ns",
    "onError": "reject",
    "webhookTimeout": 10,
    "customLabels": {},
    "includedFiles": [],
    "env": {},
    "alwaysIgnore": {
      "namespaces": []
    },
    "admission": {
      "alwaysIgnore": {
        "namespaces": [
          "mutate-ignored"
        ]
      }
    },
    "watch": {
      "alwaysIgnore": {
        "namespaces": [
          "watch-ignored"
        ]
      }
    }
  },
  "dependencies": {
    "pepr": "0.52.2"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "typescript": "5.9.3",
    "vitest": "^4.0.18"
  },
  "scripts": {
    "pepr": "pepr",
    "cli": "npm run --workspace helpers cli -- --module=$(pwd)",
    "test": "npm run cli -- test --suite all",
    "test:e2e": "npm run cli -- test --suite e2e",
    "test:unit": "npm run cli -- test --suite unit"
  }
}
