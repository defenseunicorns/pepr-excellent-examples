  "dependencies": {
    "dotenv": "^16.5.0",
    "dotenv-cli": "^8.0.0",
    "pepr": "^0.47.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/node": "^22.13.10",
    "jest": "^29.7.0",
    "kubernetes-fluent-client": "^3.4.5",
    "typescript": "5.7.3"
  },
  "scripts": {
    "pepr": "pepr",
    "cli": "npm run --workspace helpers cli -- --module=$(pwd)",
    "test": "npm run cli -- test --suite all",
    "test:e2e": "npm run cli -- test --suite e2e",
    "test:unit": "npm run cli -- test --suite unit"
  }
}