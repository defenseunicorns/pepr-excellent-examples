{
  "name": "hello-pepr-reconcile-global",
  "version": "0.0.1",
  "description": "Pepr feature: Reconcile",
  "keywords": [
    "pepr",
    "k8s",
    "policy-engine",
    "pepr-module",
    "security"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "pepr": {
    "uuid": "474c06b2-91c7-45e7-bf2f-13eac20ba229",
    "onError": "reject",
    "webhookTimeout": 10,
    "customLabels": {
      "namespace": {
        "pepr.dev": ""
      }
    },
    "alwaysIgnore": {
      "namespaces": []
    },
    "includedFiles": [],
    "env": {
      "PEPR_RECONCILE_STRATEGY": "global"
    }
  },
  "dependencies": {
    "pepr": "^0.45.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/node": "^22.13.1",
    "jest": "^29.7.0",
    "kubernetes-fluent-client": "^3.3.8",
    "typescript": "5.7.3"
  },
  "scripts": {
    "pepr": "pepr",
    "cli": "npm run --workspace helpers cli -- --module=$(pwd)",
    "test": "npm run cli -- test --suite all",
    "test:e2e": "npm run cli -- test --suite e2e",
    "test:unit": "npm run cli -- test --suite unit"
  }
}