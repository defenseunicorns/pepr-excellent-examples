{
  "compilerOptions": {
    "lib": ["es2022"],
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "resolveJsonModule": true
  }
}
