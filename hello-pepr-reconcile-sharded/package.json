{
  "name": "hello-pepr-reconcile-sharded",
  "version": "0.0.1",
  "description": "Pepr feature: Reconcile",
  "keywords": [
    "pepr",
    "k8s",
    "policy-engine",
    "pepr-module",
    "security"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "pepr": {
    "uuid": "2e898e09-962d-435e-aa19-d247de900eb5",
    "onError": "reject",
    "webhookTimeout": 10,
    "customLabels": {
      "namespace": {
        "pepr.dev": ""
      }
    },
    "alwaysIgnore": {
      "namespaces": []
    },
    "includedFiles": [],
    "env": {
      "PEPR_RECONCILE_STRATEGY": "sharded"
    }
  },
  "dependencies": {
    "pepr": "^0.34.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/node": "^20.13.0",
    "jest": "^29.7.0",
    "kubernetes-fluent-client": "^2.6.1",
    "typescript": "5.3.3"
  },
  "scripts": {
    "pepr": "pepr",
    "cli": "npm run --workspace helpers cli -- --module=$(pwd)",
    "test": "npm run cli -- test --suite all",
    "test:e2e": "npm run cli -- test --suite e2e",
    "test:unit": "npm run cli -- test --suite unit"
  }
}
