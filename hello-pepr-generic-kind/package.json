{
  "name": "hello-pepr-generic-kind",
  "version": "0.0.1",
  "description": "Pepr feature: Use Generic Kinds",
  "keywords": [
    "pepr",
    "k8s",
    "policy-engine",
    "pepr-module",
    "security"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "pepr": {
    "uuid": "generic-kind",
    "onError": "reject",
    "webhookTimeout": 10,
    "additionalWebhooks": [
      {
        "namespace": "istio-system",
        "failurePolicy": "Ignore"
      },
      {
        "namespace": "monitoring",
        "failurePolicy": "Fail"
      }
    ],
    "customLabels": {
      "namespace": {
        "pepr.dev": ""
      }
    },
    "alwaysIgnore": {
      "namespaces": []
    },
    "includedFiles": [],
    "env": {}
  },
  "dependencies": {
    "pepr": "0.52.2"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "vitest": "^4.0.18",
    "typescript": "5.9.3"
  },
  "scripts": {
    "pepr": "pepr",
    "cli": "npm run --workspace helpers cli -- --module=$(pwd)",
    "test": "npm run cli -- test --suite all",
    "test:e2e": "npm run cli -- test --suite e2e",
    "test:unit": "npm run cli -- test --suite unit"
  }
}
