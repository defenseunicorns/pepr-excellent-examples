{
  "name": "hello-pepr-reconcile-kind",
  "version": "0.0.1",
  "description": "Pepr feature: Reconcile",
  "keywords": [
    "pepr",
    "k8s",
    "policy-engine",
    "pepr-module",
    "security"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "pepr": {
    "uuid": "c1c9d019-8617-463c-af91-2c7a8ec0cbac",
    "onError": "reject",
    "webhookTimeout": 10,
    "customLabels": {
      "namespace": {
        "pepr.dev": ""
      }
    },
    "alwaysIgnore": {
      "namespaces": []
    },
    "includedFiles": [],
    "env": {
      "PEPR_RECONCILE_STRATEGY": "kind"
    }
  },
  "dependencies": {
    "pepr": "0.51.3"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.0",
    "@types/node": "^24.0.0",
    "jest": "^30.0.0",
    "typescript": "5.8.3"
  },
  "scripts": {
    "pepr": "pepr",
    "cli": "npm run --workspace helpers cli -- --module=$(pwd)",
    "test": "npm run cli -- test --suite all",
    "test:e2e": "npm run cli -- test --suite e2e",
    "test:unit": "npm run cli -- test --suite unit"
  }
}